@model QL_TourDuLich.BUS.ChiPhi

@{
    ViewBag.Title = "Delete";
}

<h2>Xoá</h2>

<h3>Bạn có muốn xoá không?</h3>
<div>
    <h4>Chi Phí</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Số Tiền
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoTien)
        </dd>

        <dt>
            Mã Đoàn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DoanDuLich.MaDoan)
        </dd>

        <dt>
            Tên Loại Chi Phí
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LoaiChiPhi.TenLoaiChiPhi)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xoá" class="btn cur-p btn-outline-primary" /> | <button type="button" class="btn cur-p btn-outline-dark">@Html.ActionLink("Trở về", "Index")</button>
        </div>
    }
</div>
