@model IEnumerable<QL_TourDuLich.BUS.ChiPhi>

@{
    ViewBag.Title = "Index";
}

<div class="row column_title">
    <div class="col-md-12">
        <div class="page_title">
            <h2>Chi Phí</h2>
        </div>
    </div>
</div>

<div class="row">

    <div class="col-md-12">
        @using (Html.BeginForm("Index", "ChiPhis", FormMethod.Get))
        {
            @Html.TextBox("q")
            <input class="btn cur-p btn-secondary" type="submit" value="Tìm kiếm chi phí" />
        }
        <br />
    </div>

    <div class="col-md-12 ">
        <button type="button" class="btn cur-p btn-outline-primary ">@Html.ActionLink("Thêm mới", "Create")</button>

    </div>

    <div class="col-md-12 ">
        <br />

    </div>

    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Danh sách chi phí</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <div class="table-responsive-sm">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <th>
                                    Số Tiền
                                </th>
                                @*<th>
                                 Mã Đoàn
                                </th>*@
                                <th>
                                    Tên Loại Chi Phí
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoTien)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.DoanDuLich.MaDoan)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.LoaiChiPhi.TenLoaiChiPhi)
                                </td>
                                <td>
                                    <button type="button" class="btn cur-p btn-outline-success">@Html.ActionLink("Sửa", "Edit", new { id = item.MaChiPhi })</button> |
                                    <button type="button" class="btn cur-p btn-outline-info">@Html.ActionLink("Chi tiết", "Details", new { id = item.MaChiPhi })</button> |
                                    <button type="button" class="btn cur-p btn-outline-warning">@Html.ActionLink("Xoá", "Delete", new { id = item.MaChiPhi })</button>

                                </td>
                            </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
