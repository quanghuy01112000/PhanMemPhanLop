@model IEnumerable<QL_TourDuLich.BUS.TourDuLich>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row column_title">
    <div class="col-md-12">
        <div class="page_title">
            <h2>Tour Du Lịch</h2>
        </div>
    </div>
</div>

<div class="row">

    <div class="col-md-12">
        @using (Html.BeginForm("Index", "TourDuLiches", FormMethod.Get))
        {
            @Html.TextBox("q")
            <input class="btn cur-p btn-secondary" type="submit" value="Tìm kiếm Tour du lịch" />
        }
        <br />
    </div>

    <div class="col-md-12 ">
        <button type="button" class="btn cur-p btn-outline-primary ">@Html.ActionLink("Thêm mới", "Create")</button>

    </div>

    <div class="col-md-12 ">
        <br />

    </div>

    <div class="col-md-12">
        <div class="white_shd full margin_bottom_30">
            <div class="full graph_head">
                <div class="heading1 margin_0">
                    <h2>Danh sách Tour du lịch</h2>
                </div>
            </div>
            <div class="table_section padding_infor_info">
                <div class="table-responsive-sm">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                                <!--<th>
                                    Mã Tour
                                </th>
                                    -->
                                <th>
                                    Tên Tour
                                </th>
                                <th>
                                    Trạng Thái
                                </th>
                                <th>
                                    Ngày Bắt Đầu
                                </th>
                                <th>
                                    Ngày Kết Thúc
                                </th>
                                <th>
                                    Giá Tour
                                </th>
                                <th>
                                    Tên Loại Tour
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                            <tr>
                                <!--<td>
                                    @Html.DisplayFor(modelItem => item.MaTour)
                                </td>
                                    -->
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenTour)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TrangThai)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayBatDau)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NgayKetThuc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.giaTour)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.tenLoaiTour)
                                </td>
                                <td>
                                    <button type="button" class="btn cur-p btn-outline-success">@Html.ActionLink("Sửa", "Edit", new { id = item.MaTour })</button> |
                                    <button type="button" class="btn cur-p btn-outline-info">@Html.ActionLink("Chi tiết", "Details", new { id = item.MaTour })</button> |
                                    <button type="button" class="btn cur-p btn-outline-warning">@Html.ActionLink("Xoá", "Delete", new { id = item.MaTour })</button>

                                </td>
                            </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
