<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Tour", "Index", "TourDuLiches", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Đoàn du lịch", "Index", "DoanDuLiches")</li>
                    <li>@Html.ActionLink("Khách hàng", "Index", "KhachHangs")</li>
                    <li>@Html.ActionLink("Địa điểm", "Index", "DiaDiems")</li>
                    <li>@Html.ActionLink("Nhân viên", "Index", "NhanViens")</li>
                    <li>@Html.ActionLink("Giá Tour", "Index", "GiaTours")</li>
                    <li>@Html.ActionLink("Chi phí", "Index", "ChiPhis")</li>
                    <li>@Html.ActionLink("Loại chi phí", "Index", "LoaiChiPhis")</li>
                    <li>@Html.ActionLink("Loại hình du lịch", "Index", "LoaiHinhDuLiches")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
